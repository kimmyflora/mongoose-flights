<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <nav>
        <a href="/flights/new"> Add Flights</a>
        <a href="/flights">All Flights</a>
    </nav>
    <main>
        <table id="list">
            <thead>
                <tr>
                        <th>Airline</th>
                        <th>Airport</th>
                        <th>FlightNo</th>
                        <th>Departure</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Write the line of EJS to iterate over movies using forEach -->
                    <% flightDocs.forEach(function(f) { %>
                        <tr>
                            <td> <%= f.airline %> </td>
                            <td> <%= f.airport %> </td>
                            <td> <%= f.flightNo %> </td>
                            <td> <%= f.departs%>  </td>
                            <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
    </main>
</body>

</html>